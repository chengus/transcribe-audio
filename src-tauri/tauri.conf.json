{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TranscribEasy",
  "version": "0.1.0",
  "identifier": "com.lucentlu.transcribeasy",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TranscribEasy",
        "width": 1000,
        "height": 820,
        "resizable": true,
        "maximizable": false,
        "minimizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
